@model ProductVM
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>ProductDetail</title>
	<link rel="stylesheet"
		  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
		  rel="stylesheet"
		  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
		  crossorigin="anonymous" />
	<link rel="stylesheet" href="~/css/productDetail.css" />
	<link rel="stylesheet"
		  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
	<link rel="preconnect" href="https://fonts.googleapis.com" />
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap"
		  rel="stylesheet" />
	<style>
		html,
		body {
			position: relative;
			height: 100%;
		}

		.swiper {
			width: 100%;
			height: auto;
			margin-left: auto;
			margin-right: auto;
		}

		.swiper-slide {
			text-align: center;
			font-size: 18px;
			background: #fff;
			display: flex;
			justify-content: center;
			align-items: center;
		}

		.swiper-slide img {
			display: block;
			max-width: 100%;
			max-height: 400px; /* Limit the size of main slider images */
			object-fit: contain; /* Ensure images keep their aspect ratio */
		}

		/* Adjusting the main swiper container */
		.mySwiper2 {
			height: 60%;
			width: 100%;
		}

		/* Thumbnail slider */
		.mySwiper {
			height: 20%;
			box-sizing: border-box;
			padding: 10px 0;
		}

		.mySwiper .swiper-slide {
			width: 25%;
			height: 100%;
			opacity: 0.4;
		}

		.mySwiper .swiper-slide-thumb-active {
			opacity: 1;
		}

		.mySwiper img {
			display: block;
			max-width: 100%;
			max-height: 100px; /* Limit the size of the thumbnail images */
			object-fit: cover; /* Keep thumbnails proportional */
		}

		/* Responsive adjustments */
		@@media (max-width: 768px) {
			.swiper-slide img {
				max-height: 200px;
			}

			.mySwiper img {
				max-height: 60px;
			}
		}
		a{
			text-decoration:none;
			color:black;
		}
	</style>
</head>

<div class="row mt-3 min-vh-100 pt-5">
	<div class="col-6">
		<div class="slide-part">
			<div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff;" class="swiper mySwiper2">
				<div class="swiper-wrapper">
					@foreach (var item in Model.ProductImages)
					{
						<div class="swiper-slide">
							<img src="@Url.Content($"~/{item.Directory}/{item.Name}")" alt="Alternate Text" />
						</div>
					}
				</div>
				<div class="swiper-button-next"></div>
				<div class="swiper-button-prev"></div>
			</div>

			<!-- Thumbnail Slider -->
			<div thumbsSlider="" class="swiper mySwiper">
				<div class="swiper-wrapper">
					@foreach (var item in Model.ProductImages)
					{
						<div class="swiper-slide">
							<img src="@Url.Content($"~/{item.Directory}/{item.Name}")" alt="Alternate Text" />
						</div>
					}
				</div>
			</div>
		</div>
	</div>

	<div class="col-6">
		<div class="product-details">
			<h1>@Model.Brand</h1>
			<h4>@Model.Name</h4>
			<div class="w-75"><p>@Model.Description</p></div>
			<h3>@Model.Price <i class="fa-solid fa-dollar-sign"></i></h3>
			<div>
				<button class="btn btn-warning shopping-cart">
					<i class="fa-solid fa-cart-shopping text-light"></i>
				</button>
				<a asp-controller="Loans" asp-action="Create" asp-route-productid="@Model.Id" class="btn btn-warning buy-now text-light">Loan now</a>
			</div>
		</div>
	</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
		crossorigin="anonymous"></script>
<script>
	var swiper = new Swiper(".mySwiper", {
		loop: true,
		spaceBetween: 10,
		slidesPerView: 4,
		freeMode: true,
		watchSlidesProgress: true,
	});
	var swiper2 = new Swiper(".mySwiper2", {
		loop: true,
		spaceBetween: 10,
		navigation: {
			nextEl: ".swiper-button-next",
			prevEl: ".swiper-button-prev",
		},
		thumbs: {
			swiper: swiper,
		},
	});
</script>
