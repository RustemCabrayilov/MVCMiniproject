@model LoanVM
<h1>Assess</h1>
<hr>
<form asp-action="Edit">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				@Html.HiddenFor(l=>l.Id)
				@Html.HiddenFor(l=>l.CustomerId)
				@Html.HiddenFor(l=>l.EmployeeId)
				@Html.HiddenFor(l=>l.ProductId)
				<label asp-for="Title" class="control-label"></label>
				<input readonly asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-6">
			<p>@Model.Customer.Name</p>
			<p>@Model.Customer.Surname</p>
			<p>@Model.Customer.Occupation</p>
			<p>@Model.Customer.Address</p>
		</div>
		<div class="col-md-6">
			<p>@Model.Product.Name</p>
			<p>@Model.Product.Model</p>
			<p>@Model.Product.Brand</p>
			<p>@Model.Product.Branch.Name</p>
		</div>

		<div class="col-md-6">
			<div class="form-group">
				<label asp-for="Terms" class="formbold-form-label">
					Terms
				</label>
				<input readonly asp-for="Terms" class="formbold-form-select form-control">
				<option>Please select one</option>
				<span asp-validation-for="Terms" class="text-danger"></span>
			</div>
		</div>


	</div>
	<div class="row mt-3 ">
		<div class="col-md-3">
			<a class="btn btn-primary" asp-action="Index">Back to List</a>
		</div>
		<div class="col-md-3 d-flex justify-content-end">
			<div class="form-group">

				<input name="assess" type="submit" value="Accept" class="btn btn-primary" />
				<input name="assess" type="submit" value="Reject" class="btn btn-primary" />
			</div>
		</div>
	</div>

</form>